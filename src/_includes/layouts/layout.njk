<!DOCTYPE html>
<html lang="{{ config.language }}">
  {% set contactJS %}
    <script type="text/javascript" src="../js/contactForm.js" nonce="{{ config.nonceSecret }}"></script>
  {% endset %}

  {% set emailJS %}
    <script type="module" src="../js/emailHandler.js" nonce="{{ config.nonceSecret }}"></script>
  {% endset %}

  {% set nestedEmailJS %}
    <script type="module" src="../../js/emailHandler.js" nonce="{{ config.nonceSecret }}"></script>
  {% endset %}

  {% include "layouts/partials/head/_head.njk" %}
  <body>
    {% include "layouts/partials/_skipNav.njk" %}
    <div class="grid__rows">
      {% include "layouts/partials/_header.njk" %}
      {% include "layouts/partials/_primarynav.njk" %}
      {{ content | safe }}
      {% include "layouts/partials/_footer.njk" %}
    </div>
    {% if page.url === '/contact/' %}
      {{ contactJS | generateMinifiedPath | safe }}
    {% endif %}

    {% if page.url === '/security/' or page.url === '/privacy/' or page.url === '/accessibility/' %}
      {{ emailJS | generateMinifiedPath | safe }}
    {% endif %}

    {% if page.url === '/contact/frownyface/' %}
      {{ nestedEmailJS | generateMinifiedPath | safe }}
    {% endif %}
  </body>
</html>
